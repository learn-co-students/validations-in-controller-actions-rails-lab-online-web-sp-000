<h2>Create a Song</h2>
<%= form_tag posts_path, method: "post" do %>
  <div class="field">
    <%= label_tag "title", "Title" %>
    <%= text_field_tag "title" %>
  </div>
  <div class="category">
    <%= label_tag "category", "Category" %>
    <%= text_field_tag "category" %>
  </div>
  <div class="content">
    <%= label_tag "content", "Content" %>
    <%= text_area_tag "content" %>
  </div>
  <%= submit_tag "Create Song" %>
<% end %>
